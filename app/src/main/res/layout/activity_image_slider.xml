<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSlider"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragmentplantlist"
        android:name="com.example.yohan.invasiveplantcounter.plantlistfrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_plantlistfrag" />

    <fragment
        android:id="@+id/fragmentplantview"
        android:name="com.example.yohan.invasiveplantcounter.plantViewFrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_plant_view" />
</LinearLayout>